# Application
APP_NAME=Warframe Collection Tracker

# Server
PORT=3000
SESSION_SECRET=change-this-to-a-long-random-string

# Behind Apache/reverse proxy (HTTPS on 443)
TRUST_PROXY=1
SECURE_COOKIES=1

# Auth (change these!)
AUTH_USERNAME=admin
# Note: If password contains $, wrap in single quotes to prevent variable expansion
# Example: AUTH_PASSWORD='pa$$word@123'
AUTH_PASSWORD=changeme

# Auth lockout
AUTH_LOCKOUT_FILE=./data/auth-lockout.json
AUTH_MAX_ATTEMPTS=5
AUTH_LOCKOUT_MINUTES=15

# Database
SQLITE_DB_PATH=./data/collection.db

# Import
CSV_IMPORT_DIR=./import
CSV_DELIMITER=;

# Optional
DEBUG_MODE=false
