# Application
APP_NAME=Warframe Collection Tracker

# Server
PORT=3000
HOST=127.0.0.1
# Required in production: set to a strong random value (e.g. openssl rand -base64 32)
SESSION_SECRET=change-this-to-a-long-random-string

# Behind Apache/reverse proxy (HTTPS on 443)
TRUST_PROXY=1
SECURE_COOKIES=1

# Auth lockout
AUTH_LOCKOUT_FILE=./data/auth-lockout.json
AUTH_MAX_ATTEMPTS=5
AUTH_LOCKOUT_MINUTES=15

# Database
SQLITE_DB_PATH=./data/collection.db

# Default admin (created by import if no users exist)
IMPORT_DEFAULT_ADMIN_USERNAME=admin
# Note: If password contains $, wrap in single quotes to prevent variable expansion
# Example: IMPORT_DEFAULT_ADMIN_PASSWORD='pa$$word@123'
IMPORT_DEFAULT_ADMIN_PASSWORD=admin

# Import
CSV_IMPORT_DIR=./import
CSV_DELIMITER=;

# Optional
DEBUG_MODE=false
